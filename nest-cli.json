{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../public",
        "outDir": "dist/public"
      },
      {
        "include": "../uploads",
        "outDir": "dist/uploads"
      },
      {
        "include": "../middleware",
        "outDir": "dist/middleware"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
