<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    {{!-- // TODO: bug on front on overflowing the html --}}
    <title> فرم ورودکاربر</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/client.css">
</head>
<body class="text-white">
    <div class="wrapper">
        <div class="box">
            <div style="--random: 0.1;"></div>
            <div style="--random: 0.2;"></div>
            <div style="--random: 0.3;"></div>
            <div style="--random: 0.4;"></div>
            <div style="--random: 0.5;"></div>
            <div style="--random: 0.6;"></div>
            <div style="--random: 0.7;"></div>
            <div style="--random: 0.8;"></div>
            <div style="--random: 0.9;"></div>
            <div style="--random: 0.10;"></div>
            <div style="--random: 0.10;"></div>
            <div style="--random: 0.1;"></div>
            <div style="--random: 0.2;"></div>
            <div style="--random: 0.3;"></div>
            <div style="--random: 0.4;"></div>
            <div style="--random: 0.5;"></div>
            <div style="--random: 0.6;"></div>
            <div style="--random: 0.7;"></div>
            <div style="--random: 0.8;"></div>
            <div style="--random: 0.9;"></div>
            <div style="--random: 0.10;"></div>
            <div style="--random: 0.10;"></div>
            
        </div>   
       
        <div class="container">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-md-6 mx-auto">
                    <div class="multi-step-form" id="maindiv">
                        <h2 class="text-center mb-5 animate__animated animate__fadeInDown">فرم ورود کاربر</h2>
                        <!-- Progress bar -->
                        <div class="d-flex flex-wrap justify-content-center mb-5" id="steps">
                            <div class="step active">
                                <div class="number">1</div>
                                <div class="desc"><small>نام/خانوادگی</small></div>
                            </div>
                            <div class="step">
                                <div class="number">2</div>
                                <div class="desc"><small>شماره تماس</small></div>
                            </div>
                            <div class="step">
                                <div class="number">3</div>
                                <div class="desc"><small>شهر/استان</small></div>
                            </div>
                            
                        </div>
                        <!-- Multi step form -->
                        <div class="multi-step-form">
                            <form action="#">
                                <!-- Step 1 -->
                                <div class="form-step show " id="step-1">
                                    <div class="mb-3">
                                        <label class="form-label">نام</label>
                                        <input name="firstname" type="text" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">نام خانوادگی</label>
                                        <input name='lastname' type="text" class="form-control">
                                    </div>
                                    <button type="button" class="btn btn-primary next-step">بعدی</button>
                                </div>
                                
                                <!-- Step 2 -->
                                <div class="form-step" id="step-2">
                                    <div class="mb-3">
                                        <label class="form-label">شماره تماس</label>
                                        <input name='phoneNumber' type="number" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">ایمیل</label>
                                        <input name='email' type="email" class="form-control">
                                    </div>
                                    <button type="button" class="btn btn-secondary prev-step">قبلی</button>
                                    <button type="button" class="btn btn-primary next-step">بعدی</button>
                                </div>
                                
                                <!-- Step 3 -->
                                <div class="form-step" id="step-3">
                                    <div class="mb-3">
                                        <label class="form-label" for="province">استان</label>
                                        <select class="form-control" id="province" name="province">
                                            <option value="" disabled selected>استان را انتخاب کنید</option>
                                            <option value="تهران">تهران</option>
                                            <option value="اصفهان">اصفهان</option>
                                            <option value="مازندران">مازندران</option>
                                            <!-- اضافه کردن سایر استان‌ها... -->
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="city">شهر</label>
                                        <select class="form-control" id="city" name="city" disabled>
                                            <option value="">ابتدا استان را انتخاب کنید</option>
                                            <!-- شهرها به صورت دینامیک اضافه می‌شوند -->
                                        </select>
                                    </div>
                                    <button type="button" class="btn btn-secondary prev-step">قبلی</button>
                                    <button type="button" class="btn btn-primary next-step">بعدی</button>
                                </div>
                                
                                <!-- Step 4 -->
                                <div class="form-step" id="step-4">
                                    <div class="mb-3">
                                        <label class="form-label">نام کاربری</label>
                                        <input name='username' type="text" class="form-control">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">گذرواژه</label>
                                        <input name="password" type="password" class="form-control">
                                    </div>
                                    <button type="button" class="btn btn-secondary prev-step">قبلی</button>
                                    <button type="submit" class="btn btn-success">ارسال</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.multi-step-form form');

    form.addEventListener('submit', function(e) {
        e.preventDefault();

        let formData = new FormData(form);

        let jsonObject = {};
        formData.forEach((value, key) => {
            jsonObject[key] = value;
        });
        
        jsonObject.phoneNumber = "+98" + jsonObject.phoneNumber
        console.log(jsonObject)

        fetch('/auth/client', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(jsonObject)
        })
        .then(response => response.json())
        .then(data => {
            if (data.statusCode == 497) {
                alert('username exist')
            } else if (data.statusCode == 498) {
                alert('user with this email exist')
            } else if (data.statusCode == 201) {
                alert('user created succesfully')
                window.location.href = '/'
            } else if (data.statusCode == 499) {
                alert('user with this phone number exist')
            }
            console.log(data)
        })
        .catch((error) => {
            console.error('Error:', error);
            alert('connection problem with server')
        });
    });
});


        const steps = document.querySelectorAll(".form-step");
        const nextBtns = document.querySelectorAll(".next-step");
        const prevBtns = document.querySelectorAll(".prev-step");
        const progressSteps = document.querySelectorAll(".step");
        
        nextBtns.forEach((btn, index) => {
            btn.addEventListener("click", () => {
                steps[index].classList.remove("show");
                steps[index + 1].classList.add("show");
                progressSteps[index].classList.remove("active");
                progressSteps[index].classList.add("completed"); 
                progressSteps[index + 1].classList.add("active");
            });
        });
        
        prevBtns.forEach((btn, index) => {
            btn.addEventListener("click", () => {
                steps[index + 1].classList.remove("show");
                steps[index].classList.add("show");
                progressSteps[index + 1].classList.remove("active");
                progressSteps[index + 1].classList.remove("completed"); 
                progressSteps[index].classList.add("active");
            });
        });
      
        
        document.addEventListener("DOMContentLoaded", function() {
            const provinceToCities = {
                'تهران': ['تهران', 'وحیدیه', 'ری', 'شمیران', '...'],
                'اصفهان': ['اصفهان', 'کاشان', 'نجف‌آباد', '...'],
                'مازندران': ['ساری', 'بابل', 'آمل', '...']
                // اضافه کردن سایر استان‌ها و شهرها...
            };
        
            const provinceSelect = document.getElementById('province');
            const citySelect = document.getElementById('city');
        
            provinceSelect.addEventListener('change', function() {
                const selectedProvince = this.value;
                const cities = provinceToCities[selectedProvince];
        
                citySelect.innerHTML = ''; // پاک کردن شهرهای قبلی
                citySelect.disabled = false;
        
                for (const city of cities) {
                    const option = document.createElement('option');
                    option.value = city;
                    option.textContent = city;
                    citySelect.appendChild(option);
                }
            });
        });
    </script>
</body>
</html>
